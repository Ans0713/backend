  </main>
  
  <!-- Footer -->
  <footer>
    <div class="container">
      <p>&copy; 2024 My Node Project. All rights reserved.</p>
      <nav>
        <a href="/">Home</a>
        <a href="/users">Users</a>
        <a href="/contact">Contact</a>
        <a href="/about">About</a>
      </nav>
    </div>
  </footer>
  
  <script src="/js/scripts.js"></script>
</body>
</html>
